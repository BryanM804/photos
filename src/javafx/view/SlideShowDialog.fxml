<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<DialogPane minHeight="640.0" minWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.controller.SlideShowController">
   <content>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <ImageView fx:id="imageDisplay" fitHeight="600.0" fitWidth="1080.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
         <left>
            <Button fx:id="backButton" minHeight="575.0" minWidth="50.0" mnemonicParsing="false" onAction="#handleBackClick" text="&lt;-" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button fx:id="forwardButton" minHeight="575.0" minWidth="50.0" mnemonicParsing="false" onAction="#handleForwardClick" text="-&gt;" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="CLOSE" />
   </buttonTypes>
</DialogPane>
